.movie-h1-css h1
  text-align center
  position relative
  font-size 250%
  font-family "Roboto", sans-serif
    &.thick
      font-style bold
  color white
  text-shadow 0 2px 2px #000
  margin-botttom 0px
  padding-bottom 0px

#navbar
  position relative // as opposed to relative, fixed, etcs
  margin-bottom 50px
  top 0
  left 0
  width calc(100% - 40px)
  padding 20px
  //background #379E51;
  //CHANGE
  //background-image: url(http://www.wolseleywool.com/store/images/product/c/cascade-220-superwash-merino-wool-51-dark-peacock-green-256px-256px.jpg)
  background-image: url(https://cdn.dribbble.com/users/247591/screenshots/2056282/btr-icon-pattern.png)
  
#navbar span
  color white
  font-size 2em
  text-transform uppercase
  font-family 'Futura', sans-serif

#navbar a 
    text-decoration none
  
#nb-items
  float right
  text-align center
#nb-items *
  padding-left 20px
  
#nb-items a 
    text-decoration none

.error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    padding 1rem 0
.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)
.modal-content
    max-width 90%
    margin 10% auto
    padding 2rem
    border 1px solid #888
    background-color white
    border-radius 5px
    text-align center

#item_img
  max-width: 100%;
  height: auto;

#column-size
  width 50px
  
#submit

  bottom 0 
  left 0 
  width 100%
  background blue
  padding 20px
  text-align center
  color white
  font-size 1.4em
  text-transform upper
  border none
#submit:hover
  opacity 0.8
  cursor pointer


