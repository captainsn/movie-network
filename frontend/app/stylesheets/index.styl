@import url(https://fonts.googleapis.com/css?family=Roboto:300);

body
  margin 0
  padding 0
  perspective 1px
  transform-style preserve-3d
  height 100%
  overflow-y scroll
  overflow-x hidden
  font-family "Roboto", sans-serif

h1
  font-size 250%
  font-family "Roboto", bold, sans-serif
    &.thick
      font-weight bold
      
#indexsubmit
    font-family: "Roboto", sans-serif;
    text-transform: uppercase;
    outline: 0;
    background: #379E51;
    width: 25%;
    border: 0; 
    //CHANGE
    border-radius: 15px
    padding: 15px;
    color: #FFFFFF;
    font-size: 14px;
    margin-top 10px
    cursor pointer
    border none
    -webkit-transition background 0.3s ease-in-out
    transition background 0.3s ease-in-out
    &:hover
        background dimgray

.slide
  position relative
  padding 25vh 10%
  min-height 100vh
  width 100vw
  box-sizing border-box
  box-shadow 0 -1px 10px rgba(0, 0, 0, .7)
  transform-style inherit
  &:before
    content ""
    position absolute
    top 0
    bottom 0
    left 0
    right 0
  &:nth-child(2n)
    .title
      margin-left 0
      margin-right auto
  &:nth-child(2n
    & + 1)
      .title
        margin-left auto
        margin-right 0

img.indexImg
  position absolute
  top 50%
  left 35%
  width 320px
  height 240px
  transform translateZ(.25px) scale(.75) translateX(-94%) translateY(-100%) rotate(2deg)
  padding 10px
  border-radius 5px
  background rgba(240,230,220, .7)
  box-shadow 0 0 8px rgba(0, 0, 0, .7)
  &:last-of-type
    transform translateZ(.4px) scale(.6) translateX(-104%) translateY(-40%) rotate(-5deg)

.title
  width 50%
  padding 5%
  border-radius 5px
  background rgba(240,230,220, .7)
  box-shadow 0 0 8px rgba(0, 0, 0, .7)

.slide, .slide:before
  background 50% 50% / cover

